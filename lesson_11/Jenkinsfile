pipeline {
    agent {
        docker {
            image 'dimetrikusk/m3:test1'
            args '--privileged --user="root"'
        }
    }

    stages {
        stage('Copy project') {
            steps {
                git branch: 'main', credentialsId: 'dimetrikuskGit', url: 'https://github.com/DimetrikusK/boxfuse.git'
            }
        }

        stage('Build project') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Make docker images') {
            steps {
                sh 'service docker start && sleep 5'
                sh 'docker build -t dimetrikusk/boxfuse:latest . && docker push dimetrikusk/boxfuse:latest'
            }
        }

        stage('Run app') {
            steps {
                sh 'ssh jenkins@84.201.146.168 "docker run dimetrikusk/boxfuse:latest"'
            }
        }

    agent{
        agent_two
    }
        stage ('Run app'){
            steps {
                sh 'docker run dimetrikusk/boxfuse:latest'
            }
        }
    }
    }